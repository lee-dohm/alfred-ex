#!/bin/sh

# script/test: Run test suite for application. Optionally pass in a path to an
#              individual test file to run a single test.


set -e

cd "$(dirname "$0")/.."

[ -z "$DEBUG" ] || set -x

export MIX_ENV="test"

script/bootstrap

echo "==> Running testsâ€¦"

if [ -n "$1" ]; then
  # pass arguments to test call. This is useful for calling a single test.
  mix espec "$1"
else
  mix espec
fi
